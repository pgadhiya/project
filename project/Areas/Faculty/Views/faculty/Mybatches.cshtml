            @Html.DisplayFor(modelItem => item.B_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.B_ST_DATE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.B_CR_DATE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
