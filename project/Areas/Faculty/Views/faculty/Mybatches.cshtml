@{
    ViewBag.Title = "Mybatches";
    Layout = "~/Areas/Faculty/Views/Shared/_LayoutFaculty.cshtml";
}

<h2>Mybatches</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.B_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.B_ST_DATE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.B_CR_DATE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
