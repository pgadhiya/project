@model project.EDM.tbltask

@{
    ViewBag.Title = "Createtask";
    Layout = "~/Areas/Faculty/Views/Shared/_LayoutFaculty.cshtml";
    string uid = Session["UserId"] != null ? Session["UserId"].ToString() : "";
}

<h2>Createtask</h2>

<main id="main" class="main">

    <section class="section dashboard">
        <div class="row">

            <!-- Left side columns -->
            <div class="col-lg-12">
                <div class="row">
                    <!--Batch Details Start-->
                    <div class="col-12">
                        <div class="card recent-sales overflow-auto">
                            <div class="card-body">
                                <h5 class="card-title">Batch <span>| Create</span></h5>
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-horizontal">
                                        <hr />
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Task_Desc, "Task Description", htmlAttributes: new { @class = "control-label mb-1" })
                                            <div class="col-md-12">
                                                @Html.TextBoxFor(model => model.Task_Desc, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Task_Desc, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group" hidden>
                                            @Html.LabelFor(model => model.F_ID, "Assign By", htmlAttributes: new { @class = "control-label mb-1" })
                                            <div class="col-md-12">
                                                @*@Html.TextBoxFor(model => model.F_ID, new { @class = "form-control", @value=@uid })
                                                    @Html.ValidationMessageFor(model => model.F_ID, "", new { @class = "text-danger" })*@
                                                <input type="text" name="F_ID" id="F_ID" value="@uid" />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.AD_ID, "Assign To", htmlAttributes: new { @class = "control-label mb-1" })
                                            <div class="col-md-12">
                                                @Html.DropDownListFor(model => model.AD_ID, ViewBag.adminname as List<SelectListItem>, "--- Select Admin ---", new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.AD_ID, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group" hidden>
                                            @Html.LabelFor(model => model.Cr_Date, "Task Date", htmlAttributes: new { @class = "control-label mb-1" })
                                            <div class="col-md-12">
                                                @Html.TextBoxFor(model => model.Cr_Date, new { @Value = @DateTime.Now.ToShortDateString() })
                                                    @Html.ValidationMessageFor(model => model.Cr_Date, "", new { @class = "text-danger", })
                                            </div>
                                        </div>

                                        <div class="form-group" hidden>
                                            @Html.LabelFor(model => model.Act_Date, "Action Date", htmlAttributes: new { @class = "control-label mb-1" })
                                            <div class="col-md-12">
                                                @Html.TextBoxFor(model => model.Act_Date, new { @Value = @DateTime.Now.ToShortDateString() })
                                                    @Html.ValidationMessageFor(model => model.Act_Date, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group" hidden>
                                            @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label mb-1" })
                                            <div class="col-md-12 mb-3">
                                                @Html.RadioButtonFor(model => model.Status, "Pending", new { @checked = true }) Pending
                                            </div>
                                        </div>

                                        <div class="form-group mt-2">
                                            <div class="col-md-offset-2 col-md-10">
                                                <input type="submit" value="Create" class="btn btn-primary" /> | @Html.ActionLink("Back to Home", "Facultyhome")
                                            </div>
                                        </div>
                                    </div>
                                }



                            </div>

                        </div>
                    </div>
                    <!--Batch Details End-->


                </div>
            </div><!-- End Left side columns -->
        </div>
    </section>

</main><!-- End #main -->

<div>
    @Html.ActionLink("Back to List", "Tasklist")
</div>
